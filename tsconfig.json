{
	"compilerOptions": {
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"noStrictGenericChecks": true,
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": false,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"lib": [
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"es2019",
			"es2020"
		],
		"types": [
			"@types/webpack-env",
			"@types/node"
		]
	},
	"exclude": [
		"random",
		".yarn"
	]
}
